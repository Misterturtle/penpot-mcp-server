# Test Dockerfile for running tests
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install all dependencies (including dev)
RUN npm ci

# Copy source and test files
COPY src ./src
COPY test-tools.ts ./

# Build
RUN npm run build

# Run tests by default
CMD ["npm", "test"]
